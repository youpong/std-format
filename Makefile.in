TARGET = main
SRCS   = $(wildcard *.cpp)
OBJS   = $(SRCS:.cpp=.o)

CXX = @CXX@
CXXFLAGS = -std=c++20 -stdlib=libc++ -fexperimental-library @CXXFLAGS@
LIBS = -lc++ -lc++experimental @LIBS@

.PHONY: all clean run
all: $(TARGET)
clean:
	rm -f $(TARGET) $(OBJS)
run: $(TARGET)
	./$(TARGET)
$(TARGET): $(OBJS)
	$(CXX) -o $(TARGET) $(OBJS) $(LIBS)
